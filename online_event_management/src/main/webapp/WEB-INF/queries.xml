<?xml version="1.0" encoding="UTF-8"?>

<queries>
	<!-- create admin table query -->
	<query id="create_admin_table">
		<![CDATA[
		CREATE TABLE admin (
			adminId varchar(10) PRIMARY KEY,
			userName varchar(20) NOT NULL,
			password varchar(20) NOT NULL,
		);	
		]]>
	</query>
	
	<!-- start event table queries -->
	<query id="create_event_table">
		<![CDATA[
			CREATE TABLE events(
				eventId varchar(10) NOT NULL,
				eventName varchar(20),
				eventDate varchar(10),
				venue varchar(30),
				eventDescription varchar(50),
				budget double,
				PRIMARY KEY (eventId)
			);
			
		]]>
	</query>
	
	<!-- event table queries -->
	<query id="insert_event">
		<![CDATA[
			INSERT INTO events(eventId,eventName,eventDate,venue,eventDescription,budget)
			VALUES(?,?,?,?,?,?);			
		]]>
	</query>
	
	<!-- event table queries -->
	<query id="get_event_ids">
		<![CDATA[
			SELECT eventId FROM events;
		]]>
	</query>
	
	<!-- event table queries -->
	<query id="get_event_all_events">
		<![CDATA[
			SELECT * FROM events;
		]]>
	</query>
	
	<!-- event table queries -->
	<query id="get_event_by_id">
		<![CDATA[
			SELECT * FROM events WHERE eventId = ?;
		]]>
	</query>
	
	<!-- event table queries -->
	<query id="update_event">
		<![CDATA[
			UPDATE events 
			SET eventName = ?, eventDate = ?, venue = ?, eventDescription = ?, budget = ?
			WHERE eventId = ?
		]]>
	</query>
	
	<!-- event table queries -->
	<query id="delete_event">
		<![CDATA[
			DELETE FROM events WHERE eventId = ?
		]]>
	</query>
	
